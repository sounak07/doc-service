{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "importHelpers": true,
    "jsx": "react",
    "declaration": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "strict": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "lib": [
      "ES2020.Promise",
      "es5",
      "es6",
      "dom"
    ]
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ]
}